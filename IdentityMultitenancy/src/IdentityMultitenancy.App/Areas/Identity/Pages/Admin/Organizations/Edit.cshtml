@page
@model EditModel
@{
    ViewData["Title"] = "Edit Organization";
    ViewData["ActivePage"] = ManageNavPages.Organization;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="edit-organization-form" asp-page-handler="Save" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <button id="save-organization-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<br>
<div class="row">
    <div class="col-md-6">
        <label>Delete this organization</label><br>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">Delete</button>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure want to delete this Organization?
            </div>
            <div class="modal-footer">
                <form id="delete-organization-form" asp-page-handler="Delete" method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <button id="delete-organization-button" type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<br>
<div>
    <a asp-page="Index">Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}